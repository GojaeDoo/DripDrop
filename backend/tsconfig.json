{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true, // ✅ 추가
    "resolveJsonModule": true // ✅ JSON import 가능하도록 추가 (추후 필요할 수도 있음)
  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
